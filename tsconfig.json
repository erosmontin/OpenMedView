{
  "compilerOptions": {
    "target": "es5",
    "module": "ESNext",
    "lib": ["ES2017", "DOM"],          // Promise, Object.entries, JSXâ€¦
    "types": ["react", "react-dom"],   // React typings
    "jsx": "react-jsx",
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}